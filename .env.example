# Example .env.example for FinTrack (Family Expense Tracker)
# Copy this file to `.env` and fill in real values before running the app.
# Do NOT commit your real `.env` with secrets to source control.

# MongoDB connection string (example uses local DB)
MONGO_URI=mongodb://localhost:27017/family-expense-tracker

# Secret used to sign JWTs. Use a long, random string in production.
JWT_SECRET=your_jwt_secret_here_change_me_to_a_secure_value

# Port the server listens on (default in code: 5000)
PORT=5000

# Optional: set environment (development|production)
NODE_ENV=development
